@{
    Layout = null;
    bool dogrula = TempData["dogrula"] != null && (bool)TempData["dogrula"];
    if (dogrula != true)
    {
        Response.Redirect("/Home/Giris/", false);
    }
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <title>Doğrula</title>
    <link rel="icon" type="image/x-icon" href="~/Favicon/Favicon.ico" />
    <meta charset="UTF-8">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        input[type=number]::-webkit-inner-spin-button,
        input[type=number]::-webkit-outer-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }
        body {
            background-image: url('../../Content/HomeController/img/background1.jpg');
            background-size: cover;
            background-position: center;
            color: #fff;
            margin: 0;
            height: 100vh;
        }

        .overlay {
            background-color: rgba(71, 36, 218, 0.7);
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login-container {
            background-color: #fff;
            color: #333;
            padding: 30px;
            border-radius: 10px;
            max-width: 400px;
            width: 100%;
        }

        .login-container h1 {
            color: #4724da;
        }

        .btn-custom {
            background-color: #4724da;
            border: none;
            color: #fff;
        }

        .btn-custom:hover {
            background-color: #3a1eac;
        }
    </style>
</head>
<body>
    <div class="overlay">
        <div class="login-container">
            <h1 class="text-center">Doğrulama</h1>
            <p class="text-center">Giriş yaptığınız e-postanıza gelen tek kulanımlık kodu girin</p>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="mb-3">
                    <label for="sayi" class="form-label text-center">Doğrulama Kodu</label>
                    <input type="number" id="sayi" name="sayi" class="form-control m-auto" required placeholder="Doğrulama kodunu girin" style="margin:auto" maxlength="4"/>
                </div>

                <div style="width:max-content; margin:auto;">
                    <button type="submit" class="btn btn-success m-auto" style="letter-spacing:1px;">&emsp;Giriş&emsp;</button>
                </div> 
            }
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>