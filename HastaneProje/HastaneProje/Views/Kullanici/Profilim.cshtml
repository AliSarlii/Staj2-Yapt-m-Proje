@model HastaneProje.Models.Kullanici
@{
    Layout = "~/Views/Shared/_KullaniciLayout.cshtml";
    ViewBag.title = "Profilim";
}
<style>
    body {
        background-color: #f8f9fa;
    }

    .profile-container {
        max-width: 600px;
        margin: 50px auto;
        background: #ffffff;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
    }

    .profile-container h2 {
        text-align: center;
        margin-bottom: 30px;
        color: #4724da;
    }

    .profile-info {
        margin-bottom: 20px;
    }

    .profile-info label {
        font-weight: bold;
        color: #495057;
    }

    .btn-primary {
        background-color: #4724da;
        border-color: #4724da;
    }

    .btn-primary:hover {
        background-color: #482cb7;
        border-color: #482cb7;
    }
</style>

<div class="profile-container">
    <h2>Profilim</h2>
    <div class="profile-info">
        <label for="fullName">Ad Soyad</label>
        <p id="fullName">@Model.ad @Model.soyad</p>
    </div>
    <div class="profile-info">
        <label for="phoneNumber">Telefon Numaram</label>
        <p id="phoneNumber">@Model.tel_No</p>
    </div>
    <div class="profile-info">
        <label for="email">E-posta</label>
        <p id="email">@Model.e_posta</p>
    </div>
    <div class="d-flex justify-content-center gap-5">
        @Html.ActionLink("Düzenle", "ProfilDuzenle", new { Id = Model.Id }, new { @class = "btn btn-outline-warning" })
        @Html.ActionLink("Sil", "ProfilSil", new { Id = Model.Id }, new { @class = "btn btn-outline-danger" })
    </div>
</div>